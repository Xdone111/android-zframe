<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">@color/black_b</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorButtonNormal">@color/color_1</item> <!-- 设置按钮颜色 -->
        <item name="colorControlNormal">@color/color_2</item> <!--设置默认颜色 -->
        <item name="colorControlHighlight">@color/color_3</item> <!--设置水波纹颜色 -->
        <item name="colorControlActivated">@color/blue</item>  <!--设置选中颜色-->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
